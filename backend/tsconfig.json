{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "removeComments": true,
   },
   "strict": true,
   "emitDecoratorMetadata": true,
   "experimentalDecorators": true,
   "include": [
      "src/**/*.ts"
   ],
   "exclude": [
      "node_modules",
      "**/*.spec.ts"
   ]
}